<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="miguel.hyppoapp.MainActivity"
    tools:showIn="@layout/activity_main">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivUserPic"
        android:src="@drawable/portraithyppo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textviewestado_Triste_off"
        android:id="@+id/happy_Label"
        android:layout_marginTop="27dp"
        android:clickable="true"
        android:onClick="moodClicked"
        android:layout_below="@+id/ivUserPic"
        android:layout_toLeftOf="@+id/ivUserPic"
        android:layout_toStartOf="@+id/ivUserPic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textviewestado_Normal_off"
        android:id="@+id/normal_Label"
        android:onClick="moodClicked"
        android:layout_alignBottom="@+id/happy_Label"
        android:layout_centerHorizontal="true"
        android:clickable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textviewestado_Feliz_off"
        android:id="@+id/sad_Label"
        android:clickable="true"
        android:onClick="moodClicked"
        android:layout_alignTop="@+id/normal_Label"
        android:layout_toRightOf="@+id/ivUserPic"
        android:layout_toEndOf="@+id/ivUserPic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hyppo"
        android:textSize="24sp"
        android:id="@+id/tvUserName"
        android:onClick="moodClicked"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp" />

</RelativeLayout>
